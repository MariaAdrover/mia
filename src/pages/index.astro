      1px -1px 2px rgb(190, 190, 190),
      2px -2px 4px rgb(185, 185, 185),
      3px -3px 6px rgb(180, 180, 180),
      4px -4px 6px rgb(175, 175, 175),
      5px -5px 6px rgb(170, 170, 170),
      6px -6px 10px rgb(165, 165, 165),
      7px -7px 10px rgb(160, 160, 160),
      8px -8px 6px rgb(155, 155, 155),
      9px -9px 4px rgb(150, 150, 150),
      10px -10px 2px rgb(145, 145, 145);

